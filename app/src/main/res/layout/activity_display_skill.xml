<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplaySkillActivity">

    <TextView
        android:id="@+id/SkillNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DisplaySkillName"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SkillNameValueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/SkillNameView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SkillDescriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DisplaySkillDescription"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SkillNameView" />

    <TextView
        android:id="@+id/SkillDescriptionValueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SkillDescriptionView" />
</android.support.constraint.ConstraintLayout>